{
  "compilerOptions": {
    "esModuleInterop": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "target": "es2018",
    "lib": ["es6", "esnext", "es2015", "dom"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"],
  "exclude": ["**.*.spec.ts"]
}
